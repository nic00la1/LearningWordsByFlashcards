<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LearningWordsByFlashcards.SettingsPage">
    <StackLayout Padding="10">
        <Label Text="Settings" FontSize="Large" HorizontalOptions="Center" />
        <Label Text="Difficulty Mode" />
        <Picker x:Name="difficultyModePicker">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Easy</x:String>
                    <x:String>Hard</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
        <Label Text="Show Description" />
        <Switch x:Name="showDescriptionSwitch" />
        <Label Text="Number of Flashcards" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Slider x:Name="numberOfFlashcardsSlider" ValueChanged="OnSliderValueChanged" Grid.Column="0" />
            <Label x:Name="sliderValueLabel" Text="1" Grid.Column="1" VerticalOptions="Center" />
        </Grid>
        <Label Text="Use Default Number of Flashcards" />
        <Switch x:Name="useDefaultNumberOfFlashcardsSwitch" />
        <Label Text="Word Difficulty Levels" />
        <Entry x:Name="wordDifficultyLevelsEntry" Placeholder="E,M,H" />
        <Label Text="Flashcards File Name" />
        <Entry x:Name="flashcardsFileNameEntry" Placeholder="{Binding FlashcardsFileName}" />
        <Button Text="Save" Clicked="OnSaveClicked" />
    </StackLayout>
</ContentPage>