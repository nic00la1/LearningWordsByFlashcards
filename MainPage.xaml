<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LearningWordsByFlashcards.MainPage">

    <ScrollView>
        <StackLayout Padding="10">
            <Label x:Name="welcomeLabel" Text="Witaj w aplikacji Nicolingo!" 
                   FontSize="Title"
                   Margin="0,0,0,20"/>

            <!-- Dodaj Picker do wyboru języka -->
            <Picker x:Name="languagePicker" Title="Wybierz język początkowy">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>PL</x:String>
                        <x:String>ENG</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <Label x:Name="chooseLevelLabel" Text="Wybierz poziom:" />
            <Picker x:Name="modePicker">
                <Picker.Items>
                    <x:String>Łatwy</x:String>
                    <x:String>Trudny</x:String>
                </Picker.Items>
            </Picker>

            <Label Text="Wybierz liczbę fiszek do przećwiczenia:" x:Name="sliderTitleLabel"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Slider x:Name="flashcardCountSlider" Minimum="1" Maximum="10" Value="10" ValueChanged="OnSliderValueChanged" Grid.Column="0" />
                <Label x:Name="sliderValueLabel" Text="10" Grid.Column="1" VerticalOptions="Center" />
            </Grid>

            <Button x:Name="startTrainingButton" Text="Zacznij trening" Clicked="OnStartTrainingClicked" />
            <Label x:Name="flashcardLabel" FontSize="24" />
            <Label x:Name="hintLabel" FontSize="20" IsVisible="False" /> <!-- PODPOWIEDZI -->
            <Entry x:Name="answerEntry" Placeholder="Napisz swoją odpowiedź" IsVisible="False" />
            <Button x:Name="submitButton" Text="Zatwierdź" Clicked="OnSubmitClicked" IsVisible="False" />
            <Label x:Name="flashcardIndexLabel" IsVisible="False" />
            <Label x:Name="resultLabel" FontSize="18" />
            <Label x:Name="scoreLabel" FontSize="18" />
            <Button x:Name="resetButton" Text="Reset Training" Clicked="OnResetTrainingClicked" IsVisible="False" />
        </StackLayout>
    </ScrollView>
</ContentPage>