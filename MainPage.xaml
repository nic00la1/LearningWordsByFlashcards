<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LearningWordsByFlashcards.MainPage">

    <StackLayout>
        <Label x:Name="FileContentLabel" Text="Zawartość pliku" />
        <Button Text="Wczytaj plik" Clicked="OnLoadFileClicked" />
        <Entry x:Name="NewTextEntry" Placeholder="Wpisz nowy tekst" />
        <Button Text="Dodaj tekst" Clicked="OnAddTextClicked" />
    </StackLayout>

</ContentPage>
