<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LearningWordsByFlashcards.MainPage">

    <StackLayout Padding="10">
        <Label Text="Select Mode:" />
        <Picker x:Name="modePicker">
            <Picker.Items>
                <x:String>Easy</x:String>
                <x:String>Hard</x:String>
            </Picker.Items>
        </Picker>
        <Button Text="Start Training" Clicked="OnStartTrainingClicked" />
        <Label x:Name="flashcardLabel" FontSize="24" />
        <Entry x:Name="answerEntry" Placeholder="Enter your answer" />
        <Button Text="Submit" Clicked="OnSubmitClicked" />
        <Label x:Name="resultLabel" FontSize="18" />
        <Label x:Name="scoreLabel" FontSize="18" />
    </StackLayout>
</ContentPage>